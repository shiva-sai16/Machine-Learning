import pandas as pd

# Load dataset
# Make sure the file path is correct for your system
data = pd.read_csv(r"#File location.csv")

# Display the dataset's columns to confirm
print("Dataset Columns:\n", data.columns.tolist())
print("-" * 30)

# Extract attributes (all columns except the last) and the target column name
attributes = data.columns[:-1] 
target = data.columns[-1]      

# The Find-S algorithm implementation
def find_s_algorithm(df):
    # CHANGE 1: Find positive examples by looking for 'Positive' in the target column.
    positive_examples = df[df[target] == 'Positive'].reset_index(drop=True)
    
    if positive_examples.empty:
        print("No positive examples found.")
        return None

    # CHANGE 2: Initialize hypothesis using the list of attributes for clarity.
    hypothesis = list(positive_examples.loc[0, attributes])

    # Iterate through the remaining positive examples
    for i in range(1, len(positive_examples)):
        current_example = list(positive_examples.loc[i, attributes])
        
        # Compare and generalize the hypothesis
        for j in range(len(hypothesis)):
            if hypothesis[j] != current_example[j]:
                hypothesis[j] = "?"  # Replace differing attributes with '?'

    return hypothesis

# Run Find-S with the corrected logic
final_hypothesis = find_s_algorithm(data)

# Display the final result clearly
print("\nFinal Hypothesis (Specific Boundary):")
if final_hypothesis:
    print(final_hypothesis)
    print("\nThis hypothesis means a person is 'Positive' if they have:")
    for attr, val in zip(attributes, final_hypothesis):
        if val != '?': # Only show the specific conditions
            print(f"- {attr}: {val}")
else:
    print("Could not generate a hypothesis.")
